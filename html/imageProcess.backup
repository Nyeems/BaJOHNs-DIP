<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Digital Image Processing</title>
        <link rel="stylesheet" href="../css/bootstrap.min.css" />
        <link rel="stylesheet" href="../css/imageProcess.css" />
    </head>
    <body>
        <main class="container-fluid">
            <div class="outline row">
                <section class="outline col-lg-6 section-wrapper">
                    <div
                        class="outline img-wrapper p-3 d-flex flex-column align-items-center justify-content-center"
                    >
                        <h5 class="outline">Original Image</h5>
                        <div class="card">
                            <div class="card-body">
                                <img
                                    id="imageSrc"
                                    src=""
                                    alt="No Image"
                                    class="img-fluid rounded"
                                />
                            </div>
                        </div>
                    </div>

                    <div
                        class="outline img-wrapper d-flex flex-column align-items-center justify-content-center"
                    >
                        <h5 class="outline">Canvas Output</h5>
                        <canvas id="canvasOutput" class="outline"></canvas>
                    </div>
                </section>

                <aside class="outline col-lg-6 section-wrapper">
                    <h2>Hello OpenCV.js</h2>
                    <p id="status">OpenCV.js is loading...</p>
                </aside>
            </div>
        </main>

        <!-- SCRIPTS -->
        <script src="../scripts/bootstrap.bundle.min.js"></script>
        <script src="../scripts/imageProcess.js"></script>
        <!-- OPENCV -->
        <script
            async
            src="../scripts/opencv.js"
            type="text/javascript"
        ></script>
    </body>
</html>
